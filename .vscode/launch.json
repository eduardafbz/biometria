    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Run JavaFX App",
            "request": "launch",
            "mainClass": "com.unip.App", // seu pacote + classe
            "vmArgs": "--module-path ${workspaceFolder}/lib/javafx-sdk-21.0.8/lib --add-modules javafx.controls,javafx.fxml"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "com.unip.App",
            "projectName": "biometria"
        },
        {
            "type": "java",
            "name": "Main",
            "request": "launch",
            "mainClass": "com.unip.Main",
            "projectName": "biometria"
        }
    ]
}